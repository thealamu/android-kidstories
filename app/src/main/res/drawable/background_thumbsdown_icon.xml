<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="8dp" android:drawable="@drawable/ic_thumb_down_black_24dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>

            <item android:bottom="8dp" android:drawable="@drawable/ic_thumb_down_black_24dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="10dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="8dp" android:drawable="@drawable/ic_thumb_down_outline_24dp" android:left="8dp" android:right="8dp" android:top="8dp" />
        </layer-list>
    </item>

</selector>